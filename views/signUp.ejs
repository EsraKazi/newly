<%- include("../views/partials/header", { title: 'Swandor', name: 'login' }) %>
<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-6 mx-auto">
        <div class="card rounded-3 text-black">
          <div class="card-body p-md-5 mx-md-4">
            <div class="text-center">
              <img src="styles\SwandorTopkapiPalaceLogoSquare.jpg" className="mx-auto" />
              <h4 class="mt-1 mb-5 pb-1">Yeni Kullanıcı Oluşturma</h4>
            </div>
            <form action="/signUp" method="POST">
              <div class="form-outline mb-4">
                <input type="text" id="username" name="username" class="form-control" placeholder="Kullanıcı Adı" required />
              </div>
              <div class="form-outline mb-4">
                <input type="password" id="password" name="password" class="form-control" placeholder="Şifre" required />
              </div>
              <div class="form-group mb-4">
                <label for="userRole">User Role</label>
                <select class="form-control" id="userRole" name="userRole">
                  <option value="callcenter">Call Center</option>
                  <option value="management">Management</option>
                  <option value="agency">Agency</option>
                </select>
              </div>
              <div class="text-center pt-1 mb-5 pb-1">
                <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Kullanıcıyı Kaydet</button>
              </div>
            </form>
            <form action="/" method = "GET">
              
              <div class="text-center pt-1 mb-5 pb-1">
                <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Anasayfa</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include("../views/partials/footer") %>
