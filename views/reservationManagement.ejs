<%- include("../views/partials/header", { title: 'Swandor', name: 'reservation' })-%>

<script>
    $(document).ready(function () {
        // Handle radio button change event
        $("input[type='radio']").change(function () {
            var inputValue = $(this).val();
            filterTable(inputValue);
        });

        // Show all reservations by default
        $("input[name='status'][value='all']").prop("checked", true);
        filterTable("all");

        // Function to filter the table rows
        function filterTable(value) {
            if (value == 'all') {
                $("table tbody tr").show();
            } else {
                $("table tbody tr").hide();
                $("table tbody tr[data-status='" + value + "']").show();
            }
        }
    });
</script>
</head>
<body>
    <%- include("../views/partials/navbarManagement")-%>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6"><h2>Rezervasyonlar</h2></div>
                        <div class="col-sm-6">
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-info">
                                    <input type="radio" name="status" value="all"> Tüm Rezervasyonlar
                                </label>
                                <label class="btn btn-info">
                                    <input type="radio" name="status" value="new"> Yeni Rezervasyonlar
                                </label>
                                <label class="btn btn-warning">
                                    <input type="radio" name="status" value="changes"> Rezervasyon Değişiklikleri
                                </label>
                                <label class="btn btn-danger">
                                    <input type="radio" name="status" value="cancel"> Rezervasyon İptalleri
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>İstek Türü</th>
                            <th>Check In Tarihi</th>
                            <th>Check Out Tarihi</th>
                            <th>Oda Türü</th>
                            <th>Acente</th>
                            <th>Ekleyen</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% reservationData.reverse().forEach((reservation) => { %>
                            <tr data-status="<%= reservation.requestType %>">
                                <td><%= reservation.requestType %></td>
								<td><%= reservation.checkInDate.toLocaleDateString('tr-TR') %></td>
								<td><%= reservation.checkOutDate.toLocaleDateString('tr-TR') %></td>
                                <td><%= reservation.roomType %></td> <!-- Assuming 'name' is the room type field -->
                                <td><%= reservation.agency %></td> <!-- Assuming 'name' is the agency name field -->
                                <td><%= reservation.addedBy%></td> <!-- Assuming 'username' is the user's username field -->
                                <td><%= reservation.status %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

<%- include("../views/partials/footer")-%>
