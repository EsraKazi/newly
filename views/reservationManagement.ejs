<%- include("../views/partials/header", { title: 'Swandor', name: 'reservation' })-%>

<script>
    $(document).ready(function () {
        // Handle radio button change event
        $("input[type='radio']").change(function () {
            var inputValue = $(this).val();
            filterTable(inputValue);
        });

        // Show all reservations by default
        $("input[name='status'][value='all']").prop("checked", true);
        filterTable("all");

        // Function to filter the table rows
        function filterTable(value) {
            if (value == 'all') {
                $("table tbody tr").show();
            } else {
                $("table tbody tr").hide();
                $("table tbody tr[data-status='" + value + "']").show();
            }
        }
    });
</script>
</head>
<body>
    <%- include("../views/partials/navbarManagement")-%>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6"><h2>Rezervasyonlar</h2></div>
                    <div class="col-sm-6">
                        <div class="btn-group" data-toggle="buttons">
                            <label class="btn btn-info">
                                <input type="radio" name="status" value="beklemede"> Bekleyen
                            </label>
                            <label class="btn btn-warning">
                                <input type="radio" name="status" value="onaylandi"> Onaylanan
                            </label>
                            <label class="btn btn-danger">
                                <input type="radio" name="status" value="reddedildi"> Reddedilen
                            </label>
                        </div>
                    </div>
                </div>
            </div>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Check In Tarihi</th>
                            <th>Check Out Tarihi</th>
                            <th>Oda Türü</th>
                            <th>Acente</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% reservationData.reverse().forEach((reservation) => { %>
                            <tr data-status="<%= reservation.status %>">
								<td><%= reservation.checkInDate.toLocaleDateString('tr-TR') %></td>
								<td><%= reservation.checkOutDate.toLocaleDateString('tr-TR') %></td>
                                <td><%= reservation.roomType %></td> <!-- Assuming 'name' is the room type field -->
                                <td><%= reservation.agency %></td> <!-- Assuming 'name' is the agency name field -->
                                <td><%= reservation.status %></td>
                                <td>
                                    <form action="/update/<%= reservation._id %>" method="POST">
                                        <input type="hidden" name="status" value="onaylandi">
                                        <button type="submit" class="btn btn-success">Onayla</button>
                                    </form>
                                    <form action="/update/<%= reservation._id %>" method="POST">
                                        <input type="hidden" name="status" value="reddedildi">
                                        <button type="submit" class="btn btn-danger">Reddet</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

<%- include("../views/partials/footer")-%>