<%- include("../views/partials/header", { title: 'Swandor', name: 'reservation' })-%>

<script>
    $(document).ready(function () {
        $(".btn-group .btn").click(function () {
            var inputValue = $(this).find("input").val();
            if (inputValue != 'all') {
                var target = $('table tr[data-status="' + inputValue + '"]');
                $("table tbody tr").not(target).hide();
                target.fadeIn();
            } else {
                $("table tbody tr").fadeIn();
            }
        });
        // Bootstrap 4'ü desteklemek için status etiketinin sınıfını değiştirme
        var bs = $.fn.tooltip.Constructor.VERSION;
        var str = bs.split(".");
        if (str[0] == 4) {
            $(".label").each(function () {
                var classStr = $(this).attr("class");
                var newClassStr = classStr.replace(/label/g, "badge");
                $(this).removeAttr("class").addClass(newClassStr);
            });
        }
    });
</script>
</head>
<body>
    <%- include("../views/partials/navbar", { userRole: 'management' })-%>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6"><h2>Rezervasyonlar</h2></div>
                        <div class="col-sm-6">
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-info active">
                                    <input type="radio" name="status" value="all" checked="checked"> Tüm istekler
                                </label>
                                <label class="btn btn-success">
                                    <input type="radio" name="status" value="onay"> Onaylandı
                                </label>
                                <label class="btn btn-warning">
                                    <input type="radio" name="status" value="revise"> Düzenlenmeli!
                                </label>
                                <label class="btn btn-danger">
                                    <input type="radio" name="status" value="red"> Reddedildi
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
				<form action="/new" method="POST" class="form-inline">
					<div class="form-group mr-2">
						<label for="requestType">İstek Türü:</label>
						<select id="requestType" name="requestType" class="form-control" required>
							<option value="new">Yeni Rezervasyon</option>
							<option value="changes">Rezervasyon Değişikliği</option>
							<option value="cancel">Rezervasyon İptali</option>
						</select>
					</div>
					<div class="form-group mr-2">
						<label for="checkInDate">Giriş Tarihi:</label>
						<input type="date" id="checkInDate" name="checkInDate" class="form-control" required>
					</div>
					<div class="form-group mr-2">
						<label for="checkOutDate">Çıkış Tarihi:</label>
						<input type="date" id="checkOutDate" name="checkOutDate" class="form-control" required>
					</div>
					<div class="form-group mr-2">
						<label for="roomType">Oda Türü:</label>
						<select id="roomType" name="roomType" class="form-control" required size="5">
							<option value="DR">Deluxe Room</option>
							<option value="DSR">Deluxe Superior Room</option>
							<option value="DGFR">Deluxe Garden Family Room</option>
							<option value="DFR">Deluxe Family Room</option>
							<option value="DDFR">Deluxe Dublex Family Room</option>
							<option value="DHR">Deluxe Handicapped Room</option>
							<!-- Diğer oda türleri buraya eklenebilir -->
						</select>
					</div>
					<div class="form-group mr-2">
						<label for="agency">Acente:</label>
						<select id="agency" name="agency" class="form-control" required size="5">
							<% agencies.forEach((agency) => { %>
								<option value="<%= agency.name %>"><%= agency.name %></option>
							<% }); %>
						</select>
					</div>
					<button type="submit" class="btn btn-primary">Rezervasyon Ekle</button>
				</form>
				
                <!-- Yatay form sonu -->
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>İstek Türü</th>
                            <th>Check In Tarihi</th>
                            <th>Check Out Tarihi</th>
                            <th>Oda Türü</th>
                            <th>Acente</th>
                            <th>Ekleyen</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% reservationData.forEach((reservation) => { %>
                            <tr>
                                <td><%= reservation.requestType %></td>
								<td><%= reservation.checkInDate.toLocaleDateString('tr-TR') %></td>
								<td><%= reservation.checkOutDate.toLocaleDateString('tr-TR') %></td>
                                <td><%= reservation.roomType %></td> <!-- Assuming 'name' is the room type field -->
                                <td><%= reservation.agencies %></td> <!-- Assuming 'name' is the agency name field -->
                                <td><%= reservation.addedBy%></td> <!-- Assuming 'username' is the user's username field -->
                                <td><%= reservation.status %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

<%- include("../views/partials/footer")-%>
